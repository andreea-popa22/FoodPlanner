@model FoodPlaner.Models.Review

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Add a review</title>
        <link rel="stylesheet" type="text/css" media="all" href="~/Content/Site.css" />
    </head>
    <body>
        <div class="container-fluid" style="width: 100%; margin-top:60px">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="recipe panel panel-default radius-div" style="padding: 20px">
                    @using (Html.BeginForm("New", "Review", new { recipeId = ViewBag.recipeId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        @Html.Label("Text", "Your feedback:")
                        <br />
                        @Html.TextArea("Text", null, new { @class = "form-control", style = "min-height: 150px;" })
                        @Html.ValidationMessageFor(m => m.Text, null, new { @class = ".textArea" })
                        <br />
                        @Html.Label("Score", "Score")

                        List<SelectListItem> items = new List<SelectListItem>();
                        items.Add(new SelectListItem { Text = "1", Value = "1" });
                        items.Add(new SelectListItem { Text = "2", Value = "2" });
                        items.Add(new SelectListItem { Text = "3", Value = "3" });
                        items.Add(new SelectListItem { Text = "4", Value = "4" });
                        items.Add(new SelectListItem { Text = "5", Value = "5" });
                        @Html.DropDownListFor(m => m.Score, items, new { @style = "margin-left: 10px; border:2px solid grey; border-radius:5px;" });
                        @Html.ValidationMessageFor(m => m.Score, null)
                        <br />
                        <br />
                        <button class="btn btn-success" type="submit">Add review</button>
                    }
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </body>
</html>

