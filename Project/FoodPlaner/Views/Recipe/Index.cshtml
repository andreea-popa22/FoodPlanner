<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recipes</title>
    <link rel="stylesheet" type="text/css" media="all" href="~/Content/Site.css" />
</head>
<body>
    <div class="container">
        <br />
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <form class="card card-sm" method="GET">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="row-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!--end of col-->
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <input class="form-control form-control-lg form-controlborderless" type="text" name="search"
                                       value="@ViewBag.SearchString"
                                       placeholder="Search topics or keywords">

                                <!--end of col-->

                                <button class="btn btn-lg btn-success" style="position:absolute; top:0%; left:40%; font-size:14px; padding:0.9%"
                                        type="submit">
                                    Search
                                </button>
                                <a class="btn btn-primary" style="position:absolute; margin-left: 80%; top:0%" href="/Recipe/New">
                                    Add new recipe
                                </a>
                            </div>
                            </div>
                            <!--end of col-->
                        </div>
                </form>
            </div>
            <!--end of col-->
        </div>
    </div>

    <div>

    </div>

    @foreach (FoodPlaner.Models.Recipe item in ViewBag.Recipes)
    {
        <h2>@item.RecipeName</h2>
        <p>Ingredients: @item.Ingredients</p>
        <p>Time: @item.Time</p>
        <a class="btn btn-info pull-left" href="/Recipe/Show/@item.RecipeId" style="margin-left:5px;">Details</a>
        <br /> <br />
    }

    @*<a class="btn btn-success" href="/Recipe/New">Add recipe</a>*@
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                @if (ViewBag.search != "")
                {
                    <a href="/Recipe/Index?page=1&search=@ViewBag.SearchString"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                }
                else
                {
                    <a href="/Recipe/Index?page=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                }
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                if (ViewBag.search != "")
                {
                    <li>
                        <a href="/Recipe/Index?page=@i&search=@ViewBag.SearchString">@(i)</a>
                    </li>
                }
                else
                {
                    <li><a href="/Recipe/Index?page=@i">@(i)</a></li>
                }
            }
            <li>
                @if (ViewBag.search != "")
                {
                    <a href="/Recipe/Index?page=@(ViewBag.lastPage)&search=@ViewBag.SearchString" arialabel="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                }
                else
                {
                    <a href="/Recipe/Index?page=@(ViewBag.lastPage)" arialabel="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                }
            </li>
        </ul>
    </nav>
</body>
</html>